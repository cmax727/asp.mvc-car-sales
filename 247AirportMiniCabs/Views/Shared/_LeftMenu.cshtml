<script>
    $('.left-menu div').click(function () {
        var element = this;
        if ($(element).is('.collapsed')) {
            $(element).removeClass('collapsed').addClass('expanded').find('.collapsed').removeClass('collapsed').addClass('expanded');
        }
        else {
            $(element).removeClass('expanded').addClass('collapsed').find('.expanded').removeClass('expanded').addClass('collapsed');
        }
    });

    sticky('.left-menu', 30, 'auto');
</script>