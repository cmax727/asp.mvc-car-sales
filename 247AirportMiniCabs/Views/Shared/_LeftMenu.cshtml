<style>
.left-menu
{
    float: left;
    width: 178px;
    position: absolute;
    
    background-color: lightGrey;
    border: 5px solid #B3B1B1;
    box-shadow: inset 0 0 2px black;
    border-radius: 6px;
}

.left-menu div
{
    border-top: 1px solid #9A9DA0;
    overflow:hidden;
}

.left-menu span, .left-menu a
{
    padding: 10px 20px;
    margin-bottom: -5px;
}

.left-menu span
{
    background-repeat: no-repeat;
    background-position: 8px center;
    padding-left: 25px;
    display:block;
    
}
.left-menu span.collapsed
{
    background-image: url(/content/img/dracula/collapsed.png);
}
.left-menu span.expanded
{
    background-image: url(/content/img/dracula/expanded.png);
}

.left-menu a
{
    display:block;
    margin-top:5px;
    border-top:1px solid #9A9DA0;
    margin-left: 27px;
    border-left: 1px solid #9A9DA0;
}
.left-menu a.selected
{
    background: black!important;
    color: white;
}
.left-menu a:hover, .left-menu div.collapsed:hover
{
    background-color:#DBD7D7;
}
.left-menu a:active, .left-menu a:focus, .left-menu div.collapsed:active
{
    background-color:#C7C3C3;
}

div.collapsed a
{
    display:none;
}

.right-arrow
{
    display: block;
    position: absolute;
    background-repeat: no-repeat;
    background-position: 8px center;
    background-image: url(/content/img/dracula/expect-more.png);
    margin-top: -2px;
    margin-left: 113px;
    height: 2px;
}

.client-page {
    margin-left: 216px;
    border: 6px solid #C7C7C7;
    border-radius: 30px;
    overflow: hidden;
    background-color: #DFDFDF;
    box-shadow: inset 0 0 3px black;
}
</style>

